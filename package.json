{
  "name": "staticgenie",
  "version": "1.0.0",
  "description": "Built for JavaScript programmers to intuitively create static websites",
  "main": "",
  "scripts": {
    "start": "npm run build:fresh && npm run build:typescript && npm run build:pages && npm run build:assets && npm run build:optimise && npm run build:cleanup",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:fresh": "rm -rf ./www ./tmp && mkdir -p ./www ./theme/assets ./theme/layouts",
    "build:typescript": "tsc",
    "build:pages": "nodejs ./tmp/src/index.js",
    "build:assets": "cp -vr ./theme/assets ./www/assets",
    "build:optimise": "echo \"@TODO run JS/CSS/IMG optimisation scripts over the output (www) folder\"",
    "build:cleanup": "rm -rf ./tmp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StaticGenie/StaticGenie.git"
  },
  "keywords": [],
  "author": "Scott (ScottyCoder)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StaticGenie/StaticGenie/issues"
  },
  "homepage": "https://staticgenie.com",
  "devDependencies": {
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@types/ejs": "^3.0.5",
    "@types/fs-extra": "^9.0.4",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.14.6",
    "ejs": "^3.1.5",
    "fs-extra": "^9.0.1",
    "js-yaml": "^3.14.0"
  }
}
