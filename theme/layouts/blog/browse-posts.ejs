<html>
    <head>
        <%- include("/head") %>
    </head>
    <body>
        <%- include("/header") %>
        <%- include("/jumbotron") %>
        <section class='canvas constrict'>
            <div class='page'>
                <% global.blog.posts.forEach(post => { %>
                    <div style='padding:30px;margin-bottom:15px;background-color:#FFF;border:solid 1px #CCC;border-left:solid 3px #006699;'>
                        <h2 style="margin-top:0;margin-bottom:3px;"><a href='<%= post.url %>'><%= post.title %></a></h2>
                        <p style="margin:0;color:#666;"><%= post.desc %></p>
                    </div>
                <% }) %>
            </div>
        </section>
        <%- include("/footer") %>
    </body>
</html>